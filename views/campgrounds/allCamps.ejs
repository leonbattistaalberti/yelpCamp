<% include ../partials/header %>
<!-- Container for the entire page -->
<div class = "container">
	<!-- Jumbotron -->
	<header class = "jumbotron">
		<div class="container">
			<h1>WELCOME TO THE WORLD OF POSSIBILITIES</h1>
			<p>Travel throught space and time</p>
			<a class = "btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground</a>
		</div>
	</header>
	<!-- Most Popular Shades headline -->
	<div class = "row">
		<div class = "col-lg-12">
			<h3>Most Popular Shades</h3>
			
		</div>
	</div>
	<!-- Thumbnails and captions -->
	<div class = "row text-center">
		<% camps.forEach(function(camp) { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src = "<%=camp.image%>">
				
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<div>
					<a href = "/campgrounds/<%= camp._id%>" class = "btn btn-primary">More Info</a>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
	<% include ../partials/footer %>
</div>